# Google Cloud Platform Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Artifact Registry Configuration
ARTIFACT_REGISTRY_REPO=cron-jobs

# Docker Image Configuration
IMAGE_NAME=cron-uninterrupt-task

# Cloud Run Job Configuration
CLOUD_RUN_JOB_NAME=cron-uninterrupt-task
MEMORY=512Mi
CPU=1
TIMEOUT=300s
MAX_RETRIES=3

# Cloud Scheduler Configuration
SCHEDULER_NAME=cron-uninterrupt-task-hourly
SCHEDULE=0 * * * *
TIMEZONE=America/Los_Angeles

# Application Configuration
API_ENDPOINT=https://cloud.blackbox.ai/api/cron/resume-stalled

# Optional: Service Account
# SERVICE_ACCOUNT=your-service-account@your-project.iam.gserviceaccount.com
